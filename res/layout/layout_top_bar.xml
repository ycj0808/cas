<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navbar_height"
    android:background="@drawable/abs__ab_solid_dark_holo"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/navbar_imageView_left" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="gone" 
        android:padding="3dp"
        android:layout_margin="5dp"
        android:background="@drawable/ic_titlebar_back"/>
   <TextView 
       android:id="@+id/navbar_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@style/Cas.NavBar.Title"
       android:layout_centerInParent="true"
       android:text=""/>
   
   <Button 
       android:id="@+id/navbar_btn_right"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"
       android:padding="3dp"
       android:layout_margin="5dp"
       android:text=""
       android:textColor="@color/white"
       android:visibility="gone" 
       android:background="@drawable/navbar_btn_right_bg"
       />
</RelativeLayout>



