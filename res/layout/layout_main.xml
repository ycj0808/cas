<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >
        <com.ycj.android.widget.pulltorefresh.PullAndLoadListView
            android:id="@+id/msg_list_item"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#fff8f8f8"
            android:cacheColorHint="#fff8f8f8"
            android:dividerHeight="0.0dip"
            android:drawSelectorOnTop="false"
            android:listSelector="#fff8f8f8" />
    </LinearLayout>

    <include
        android:id="@+id/placeholder_loading"
        layout="@layout/layout_loading_indicator"
        android:visibility="gone" />

</merge>