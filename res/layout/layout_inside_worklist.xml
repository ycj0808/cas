<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_insideworklist_content"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_editbox_selector"
        android:gravity="left|top"
        android:hint="@string/hint_inside_content"
        android:paddingLeft="10dp"
        android:singleLine="false"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_insideworklist_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_red_bg"
        android:text="@string/btn_complaint_submit" />

</LinearLayout>